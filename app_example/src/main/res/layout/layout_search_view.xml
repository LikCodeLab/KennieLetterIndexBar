<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_search_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shape_edt">

        <EditText
            android:id="@+id/et_search_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/layout_search_hint_text"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_8"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#cdcdcd"
            android:textCursorDrawable="@drawable/shape_cursor_edt"
            android:textSize="@dimen/sp_16"
            tools:ignore="NestedWeights" />

        <ImageView
            android:id="@+id/iv_clear_all"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_10"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/cp_icon_clear_all"
            android:visibility="gone"
            tools:visibility="visible" />


    </LinearLayout>

</LinearLayout>